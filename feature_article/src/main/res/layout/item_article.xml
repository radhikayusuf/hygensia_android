<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ClickableContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimens_16dp"
    android:layout_marginTop="@dimen/dimens_16dp"
    android:layout_marginEnd="@dimen/dimens_16dp"
    app:cardCornerRadius="@dimen/dimens_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <id.radhika.lib.ui.component.ImageComp
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_120dp"
            tools:visibility="gone"
            android:scaleType="centerCrop" />

        <id.radhika.lib.ui.component.LabelComp
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dimens_16dp"
            android:paddingVertical="@dimen/dimens_8dp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/size_16sp"
            android:textStyle="bold"
            tools:text="Radhika Yusuf" />

        <id.radhika.lib.ui.component.LabelComp
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingHorizontal="@dimen/dimens_16dp"
            android:paddingBottom="@dimen/dimens_8dp"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/size_14sp"
            tools:text="Radhika Yusuf" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
