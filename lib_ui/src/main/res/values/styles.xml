<resources>

    <!-- Base application theme. -->
    <style name="NoActionBarAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLibPrimary</item>
        <item name="colorPrimaryDark">@color/colorLibPrimaryDark</item>
        <item name="colorAccent">@color/colorLibAccent</item>
    </style>

    <style name="ClickableContent">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="EditTextPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimens_16dp</item>
        <item name="android:paddingBottom">@dimen/dimens_24dp</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="fontFamily">@font/gotham_regular</item>
    </style>

    <style name="EditTextBorderPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_primary_border_layer</item>
        <item name="android:paddingStart">@dimen/dimens_16dp</item>
        <item name="android:paddingTop">@dimen/dimens_8dp</item>
        <item name="android:paddingEnd">@dimen/dimens_16dp</item>
        <item name="android:paddingBottom">@dimen/dimens_8dp</item>
    </style>

    <style name="EditTextBorderPrimaryPassword" parent="EditTextBorderPrimary">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="ButtonPrimary" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_primary_button_layer</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/dimens_16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_18sp</item>
    </style>

    <style name="ButtonPrimaryContent">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_18sp</item>
    </style>

    <style name="ButtonSecondary" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_secondary_button</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_18sp</item>
    </style>

    <style name="ButtonThird" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_third_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_18sp</item>
    </style>

    <style name="ButtonSecondaryContent">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_18sp</item>
    </style>

    <style name="ProgressMain" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorWhite</item>
    </style>

</resources>
